{
  "name": "training-utility",
  "version": "1.10.3",
  "description": "A training utility Electron app",
  "main": "main.js",
  "author": "ala89",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build-renderer": "webpack --config webpack.config.js",
    "pack": "npm run build-renderer && electron-builder --dir",
    "dist": "npm run build-renderer && electron-builder"
  },
  "devDependencies": {
    "electron": "^8.0.0",
    "electron-builder": "^24.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "style-loader": "^3.3.3",
    "css-loader": "^6.8.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.3.3",
    "deepmerge": "^4.3.1",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "net": "^1.0.2",
    "path": "^0.12.7",
    "snekfetch": "^4.0.4",
    "sortablejs": "^1.12.0",
    "sweetalert2": "^10.3.2"
  },
  "build": {
    "appId": "com.example.trainingutility",
    "productName": "Training Utility",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "assets/css/**",
      "assets/fonts/**",
      "assets/js/app.js",
      "templates/**",
      "trainings/**",
      "config.json",
      "icon.png"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Training Utility"
    }
  }
}